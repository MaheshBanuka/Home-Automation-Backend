<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OnOffServlet</servlet-name>
        <servlet-class>controller.OnOffServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OnOffServlet</servlet-name>
        <url-pattern>/onoff</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddcartServlet</servlet-name>
        <servlet-class>controller.AddcartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddcartServlet</servlet-name>
        <url-pattern>/addcart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewcartServlet</servlet-name>
        <servlet-class>controller.ViewcartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewcartServlet</servlet-name>
        <url-pattern>/viewcart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CompletePaymentServlet</servlet-name>
        <servlet-class>controller.CompletePaymentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CompletePaymentServlet</servlet-name>
        <url-pattern>/compay</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MySrevicesServlet</servlet-name>
        <servlet-class>controller.MySrevicesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MySrevicesServlet</servlet-name>
        <url-pattern>/myser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FeatureServlet</servlet-name>
        <servlet-class>controller.FeatureServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FeatureServlet</servlet-name>
        <url-pattern>/feature</url-pattern>
    </servlet-mapping>
</web-app>